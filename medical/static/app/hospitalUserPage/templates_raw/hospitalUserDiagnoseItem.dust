<tr>
	<td>{diagnosenumber}</td>
	<td>{date}</td>
	<td>{doctorName}</td>
	<td>{patientName}</td>
	<td>{positionName}</td>
	<td>{status}</td>
	{@if cond="'{hasDicom}' == 'true'"}
	<td class="dicom-file-group">
		<a href="{dicomUrl}" class="">Dicom文件</a>
	</td>
	{:else}
	<td class="dicom-file-group">
		等待上传
	</td>
	{/if}
	{@if cond="'{hasDoc}' == 'true'"}
	<td class="doc-file-group">
		{#docUrl}
			<a href="{.}" target="_blank">文件{@math key=$idx method="add" operand="1"/}</a>{~n}
		{/docUrl}
	</td>
	{:else}
	<td class="doc-file-group">
		等待上传
	</td>
	{/if}


	<td class="action-group">
		<a id="submit-diagnose-link" href="/applyDiagnose?diagnoseid={id}&type=1&edit=true" target="_blank" class="">修改</a>
		<a class="rm-diagnose-link" href="#" class="">撤销</a>
	</td>
</tr>